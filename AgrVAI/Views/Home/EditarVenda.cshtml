@model AgrVAI.Models.Produtos

@{
    ViewBag.Title = "Modo de Edição";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .teste22{
        padding-left:40%;
        padding-top: 5%;
    }

</style>

<html lang="pt-br">
<head>
    <link rel="icon" type="image/png" href="~/content/assets/img/favicon.png">

    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/assets/img/apple-icon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,600,700,800" rel="stylesheet" />
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <!-- Nucleo Icons -->
    <link href="~/Content/assets/css/nucleo-icons.css" rel="stylesheet" />
    <!-- CSS Files -->
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/black-dashboard.css?v=1.0.0" rel="stylesheet" />

</head>
<body>
    <div style="color:white;font-size:20px">Editando o Produto: </div>
    <div style="color:cornflowerblue;font-size:20px">@Model.Produto</div>

    <div class="teste22">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    <div style="color:#fff">Produto</div>
                    <div class="">
                        @Html.EditorFor(model => model.Produto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Produto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div style="color:#fff">Quantidade</div>
                    <div class="">
                        @Html.EditorFor(model => model.Quantidade, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Quantidade, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div style="color:#fff">Valor</div>
                    <div class="">
                        @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div style="color:#fff">Vendedor</div>
                    <div class="">
                        @Html.EditorFor(model => model.Vendedor, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Vendedor, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div>
                    <input style="margin-left:7.5%" type="submit" value="Salvar Edição" class="btn btn-default" />
                </div>
            </div>
        }
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</body>
</html>
